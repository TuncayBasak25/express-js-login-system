extends layout

block content
  form(id="login", action="/login", method="POST")

  div(class="d-flex justify-content-center align-items-center" style="height: 100vh")
    div(class="w-25")
      input(type="text", form="login", name="username", placeholder="Username", class="form-control")
      input(type="password", form="login", name="password", placeholder="Password", class="form-control")
      button(type="submit", form="login", class="form-control btn btn-lg btn-primary") Login
    
